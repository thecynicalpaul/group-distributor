{
  "compilerOptions": {
    "baseUrl": ".",
    /* Language and Environment */
    "target": "es2020",
    "lib": ["es2020"],
    /* Modules */
    "module": "esnext",
    "rootDir": "src",
    "moduleResolution": "node",
    /* JavaScript Support */
    "allowJs": true,
    /* Emit */
    "outDir": "build",
    /* Interop Constraints */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    /* Type Checking */
    "strict": true,
    "noImplicitAny": true,
    /* Completeness */
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
